# Root .gitignore

# Environment variables
.env
.env.local
.env.*.local

# Node modules (catch-all for any subfolder)
node_modules/
**/node_modules/

# Database files
*.db
*.db-journal
*.db-shm
*.db-wal
data/

# Build outputs
dist/
build/
.next/
out/

# Logs
logs/
*.log
npm-debug.log*
yarn-debug.log*

# OS files
.DS_Store
Thumbs.db
*.swp
*.swo
*~

# IDE
.vscode/*
!.vscode/extensions.json
!.vscode/settings.json
.idea/
*.sublime-project
*.sublime-workspace

# Testing
coverage/
.nyc_output/

# Temporary files
tmp/
temp/
*.tmp

# Package manager
package-lock.json
yarn.lock
pnpm-lock.yaml
